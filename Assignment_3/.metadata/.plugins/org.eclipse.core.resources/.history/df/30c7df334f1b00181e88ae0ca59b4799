package model;

public class Sensor {
	private int rows;
	private int cols;
	private int rowr;
	private int colr;
	private RobotGrid robot;

	public Sensor(RobotGrid robot, int rows, int cols){
		this.robot = robot;
		this.rows = rows;
		this.cols = cols;
		scan();
	}
	
	public void update(RobotGrid robot){
		this.robot = robot;
		scan();
	}
	
	public int getRow(){
		return this.rowr;
	}
	
	public int getCol(){
		return this.colr;
	}
	
	private void scan(){
		
	}
}
